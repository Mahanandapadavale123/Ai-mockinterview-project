{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022", // Target modern JavaScript
    "lib": ["ES2023"], // Use the latest library features
    "module": "ESNext", // Use ESNext modules
    "skipLibCheck": true, // Skip type checking of declaration files

    /* Bundler mode */
    "moduleResolution": "node", // Use Node.js module resolution
    "allowImportingTsExtensions": true, // Allow importing TypeScript files with extensions
    "isolatedModules": true, // Ensure each file is treated as a module
    "moduleDetection": "force", // Force module detection
    "noEmit": true, // Prevent emitting compiled files

    /* Linting */
    "strict": true, // Enable strict type checking
    "noUnusedLocals": true, // Report unused local variables
    "noUnusedParameters": true, // Report unused function parameters
    "noFallthroughCasesInSwitch": true, // Prevent fallthrough in switch cases
    "noUncheckedSideEffectImports": true // Report unchecked side-effect imports
  },
  "include": ["vite.config.ts"] // Include only the Vite configuration file
}